    "output_folder": false,
    "globals_path": "./chromedriver-server.js",
    "selenium": {
        "start_process": false
    },
    "test_settings": {
        "default": {
            "launch_url": "http://localhost:3000",
            "selenium_port": 9515,
            "selenium_host": "localhost",
